<UserControl x:Class="HVR.UserControls.ConsoleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HVR.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="Black" Opacity=".5" />
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <ListView Grid.Row="0" Background="Transparent" ItemsSource="{Binding ConsoleLog, Mode=TwoWay}" />
        <TextBox Grid.Row="1" Background="Transparent" Text="{Binding Entry, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  Foreground="White" AcceptsReturn="True" KeyUp="TextBox_KeyUp" />
    </Grid>
</UserControl>
